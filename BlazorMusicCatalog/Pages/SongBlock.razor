<table class="table">
    <tr>
        <td>Name</td>
        <td><input type="text" @bind="Song.Name"/></td>
    </tr>
    <tr>
        <td>Upload</td>
        <td><InputFile/></td>
    </tr>
    <tr>
        <td>
            <button @onclick="UpdateValueSong">Update</button>
        </td>
    </tr>
</table>

@code {
    [Parameter]
    public Song Song { get; set; }

    [Parameter]
    public EventCallback<Song> OnSongChange { get; set; }

    async Task UpdateValueSong()
    {
        await OnSongChange.InvokeAsync(Song);
    }
}
